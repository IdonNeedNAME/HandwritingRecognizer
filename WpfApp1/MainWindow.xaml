<Window x:Class="WpfApp1.MainWindow"
        ResizeMode="CanResizeWithGrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="cnnControler" Height="400" Width="400">

    <!-- 外层用 Grid 控制整体位置 -->
    <Grid ShowGridLines="False">
        <!-- 测试时把 ShowGridLines 打开，能看到网格线 -->

        <!-- 1. 定义网格结构：3行 2列 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <!-- 第0行：固定50像素 -->
            <RowDefinition Height="*" />
            <!-- 第1行：霸占所有剩余空间 -->
            <RowDefinition Height="25" />
            <!-- 第2行：根据内容自动撑开 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <!-- 第0列：左侧菜单，固定宽 -->
            <ColumnDefinition Width="*" />
            <!-- 第1列：右侧内容，占满剩余 -->
        </Grid.ColumnDefinitions>

        <!-- 2. 放置控件 -->

        <!-- 放在第0行，跨越2列 -->
        <Button Content="Lzyyy的申必管理器" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="LightBlue"/>

        <!-- 放在第1行，第0列 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" >
            <Button Content="训练数据集" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="train"/>
            <Button Content="测试" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="test"/>
            <Button Content="调试测试" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="Button_Start"/>
            <Button Content="刷新文件" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="refreshDoc"/>
            <TextBlock Text="训练数据路径：" Margin="5,5,5,0"/>
            <TextBox Text="{Binding TrainPath, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="5,0,5,5" />
            <TextBlock Text="测试数据路径：" Margin="5,5,5,0"/>
            <TextBox Text="{Binding TestPath, UpdateSourceTrigger=PropertyChanged}" Height="15" Margin="5,0,5,5" />
            <Button Content="暂停" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="Stop"/>
            <Button Content="恢复" Background="White" Margin="5,5,5,5" Grid.RowSpan="2" Click="Donotstop"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" >
            <TextBlock Text="{Binding state}" Grid.Row="2" Grid.ColumnSpan="2" Padding="5" Margin="0,0,0,-26"/>
        </StackPanel>
        <!-- 放在第1行，第1列 -->
        <!--Button Content="主内容区域" Grid.Row="1" Grid.Column="1" Background="White" Margin="0,0,0,25" Grid.RowSpan="2"/-->

        <!-- 放在第2行，跨越2列 -->
        <TextBlock Text="{Binding FinishRate}" Grid.Row="2" Grid.ColumnSpan="2" Padding="5" Background="Orange"/>

    </Grid>
</Window>